<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="130dp">

        <com.unistrong.demo.view.TitleLinearLayout
            android:layout_width="270dp"
            android:layout_height="85dp"
            android:background="@drawable/circle"
            android:paddingTop="20dp"
            app:tipText="4G" />

        <TextView
            android:id="@+id/tv_gsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="20dp"
            tools:text="GSM" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="225dp"
        android:orientation="vertical">

        <com.unistrong.demo.view.TitleLinearLayout
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:background="@drawable/circle"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            app:tipText="GPS">

            <Button
                android:id="@+id/btn_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="GPS" />
        </com.unistrong.demo.view.TitleLinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="310dp"
        android:orientation="vertical">

        <com.unistrong.demo.view.TitleLinearLayout
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:background="@drawable/circle"
            android:orientation="horizontal"
            app:tipText="Misc">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_volume_plug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume +" />

                <Button
                    android:id="@+id/btn_volume_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume -" />

                <TextView
                    android:id="@+id/tv_current_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />
            </LinearLayout>
        </com.unistrong.demo.view.TitleLinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.unistrong.demo.view.TitleLinearLayout
                    android:layout_width="260dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle"
                    android:orientation="vertical"
                    app:tipText="MCUInfo">

                    <TextView
                        android:id="@+id/tv_mcu_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        tools:text="mcuinfo" />
                </com.unistrong.demo.view.TitleLinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.unistrong.demo.view.TitleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    app:tipText="CVBS" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.unistrong.demo.view.TitleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    app:tipText="CAN">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_obd_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="can1" />

                        <Button
                            android:id="@+id/btn_obd_start2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="can2" />

                        <Button
                            android:id="@+id/btn_dashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dash\tboard" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_can_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:typeface="monospace" />
                </com.unistrong.demo.view.TitleLinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <com.unistrong.demo.view.TitleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    app:tipText="UART">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="uart4" />

                        <Button
                            android:id="@+id/btn_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="uart6" />

                        <Button
                            android:id="@+id/btn_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="uart7" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_uart_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scrollbars="vertical"
                        android:typeface="monospace" />
                </com.unistrong.demo.view.TitleLinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="23dp">

        <com.unistrong.demo.view.TitleLinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:background="@drawable/circle"
            android:paddingTop="25dp"
            app:tipText="Camera 2" />

    </RelativeLayout>

    <SurfaceView
        android:id="@+id/video7"
        android:layout_width="180dp"
        android:layout_height="144dp"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="53dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Chronometer
            android:id="@+id/tv_recording_time7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_recording_indicator"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_take_picture7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_photo_camera_black_24dp"
            android:textColor="@android:color/white"
            tools:text="capture" />

        <Button
            android:id="@+id/btn_record7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:textColor="@android:color/white"
            tools:text="record" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="23dp">

        <com.unistrong.demo.view.TitleLinearLayout
            android:id="@+id/tll_video6"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:background="@drawable/circle"
            android:paddingTop="25dp"
            app:tipText="Camera 1" />

    </RelativeLayout>

    <SurfaceView
        android:id="@+id/video6"
        android:layout_width="180dp"
        android:layout_height="144dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="53dp" />

    <LinearLayout
        android:id="@+id/ll_video6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Chronometer
            android:id="@+id/tv_recording_time6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_recording_indicator"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_take_picture6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_photo_camera_black_24dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_record6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
