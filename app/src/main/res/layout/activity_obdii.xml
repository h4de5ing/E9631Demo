<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_search_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. search channel" />

            <Button
                android:id="@+id/btn_set_channel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set channel 1" />

            <Button
                android:id="@+id/btn_set_channel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set channel 2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_search_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. search mode" />

            <Button
                android:id="@+id/btn_set_obd_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set obd mode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_set_baud_250K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0. set baud 250K" />

            <Button
                android:id="@+id/btn_set_baud_500K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.1. set baud 500K" />

            <Button
                android:id="@+id/btn_send_data_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. send start" />

            <Button
                android:id="@+id/btn_send_data_pidlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. get pid list" />

            <Button
                android:id="@+id/btn_send_data_pid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. get pid value" />

            <CheckBox
                android:id="@+id/cb_filter"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content"
                android:text="Filter" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_btn"
        tools:text="tools" />
</RelativeLayout>
